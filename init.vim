" Sidebar adjustment
set cursorline
set number
set relativenumber

" Color/Search
syntax on
set cc=80
set hlsearch
set incsearch
set ignorecase

" File Formatting
set nocompatible
filetype on
filetype plugin on
filetype indent on
set noswapfile
set autoindent

" Clipboard
set clipboard=unnamedplus

" Spelling
set spell
