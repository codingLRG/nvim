" Sidebar adjustment :D
set cursorline
set number " Number line on side
set relativenumber " Line distance from current position

" Color/Search Assistance
syntax on
set cc=120
set hlsearch
set incsearch
set ignorecase

" File Formatting Assistance
set nocompatible
filetype on
filetype plugin on
filetype indent on
set noswapfile
set autoindent

" Clipboard
set clipboard=unnamedplus

" Spelling
set spell 
